<?xml version="1.0" encoding="utf-8"?>
<!-- 顶部标题栏 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_comm_topbar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffffff"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

    <ImageView
        android:id="@+id/album_title_bar_cancel"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/return_icon"/>

    <TextView
        android:id="@+id/album_title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxLength="16"
        android:text="@string/uimage_choose_photo"
        android:textColor="#333333"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/album_title_bar_skip"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="right|center_vertical"
        android:minWidth="60dp"
        android:text="@string/uimage_skip"
        android:textColor="#333333"
        android:textSize="15sp"/>

</RelativeLayout>